actor A(5){
	knownactors {
		B b;
	}

	actorvars {
		int i;
	}

	msghandler initial() {
	    print(i);
		i = 2;
		b.foo(i);
	}

	msghandler bar(){
		print(i);
		sender.foo(i+1);
	}
}

actor B(2){
	knownactors {
		A a;
	}

	actorvars {
	    int x;
	}

	msghandler foo(int i) {
		print(i);
		sender.bar(i+1);
	}
}

main {
	A a(b):();
	B b(a):();
}